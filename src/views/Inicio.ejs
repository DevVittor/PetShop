<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
</head>
<body>

    <%- include("./components/NavBar.ejs") %>
    <h1>Lista de Produtos</h1>
    <ul>
        <% Lista.forEach(produto => { %>
            <li><%= produto.nome %> - <%= produto.valor %></li>
            <input type="hidden" name="produto" value='{"nome": "<%= produto.nome %>", "valor": <%= produto.valor %> }'>
            <button onclick="adicionarProduto(this)">Adicionar</button>
        <% }); %>
    </ul>

</body>
<script src="/js/inicio.js"></script>
</html>